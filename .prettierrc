{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": "**/*.{ts,tsx,js}",
      "options": {
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "printWidth": 120,
        "arrowParens": "always",
        "trailingComma": "all",
        "endOfLine": "crlf",
        "importOrder": [
          "^react$",
          "<THIRD_PARTY_MODULES>",
          "^../.*(?<!\\.style)$",
          "^./.*(?<!\\.style)$",
          "\\.style$"
        ],
        "importOrderSeparation": true
      }
    }
  ]
}
